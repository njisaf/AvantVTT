{{!-- 
  Number Field Component
  
  Usage:
    {{> "systems/avant/templates/shared/partials/number-field" 
        name="system.level"
        value=system.level
        label="Level"
        min=1
        max=20
        placeholder="1"
        hint="Character level"
        class="custom-class"
    }}
  
  Required: name
  Optional: value, label, min, max, placeholder, hint, class
--}}

<div class="tw-form-group {{#if class}}{{class}}{{/if}}">
    <label for="{{name}}" class="tw-form-label">
        {{#if label}}{{label}}{{else}}Number Field{{/if}}
    </label>
    
    <input type="number"
           id="{{name}}"
           name="{{name}}"
           value="{{value}}"
           {{#if min}}min="{{min}}"{{/if}}
           {{#if max}}max="{{max}}"{{/if}}
           {{#if placeholder}}placeholder="{{placeholder}}"{{/if}}
           {{#if hint}}aria-describedby="{{name}}-hint"{{/if}}
           class="tw-form-input"
           data-dtype="Number">
    
    {{#if hint}}
        <div id="{{name}}-hint" class="tw-form-hint" role="note">{{hint}}</div>
    {{/if}}
</div>