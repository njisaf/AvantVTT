{{!-- 
  Checkbox Field Component
  
  Usage:
    {{> "systems/avant/templates/shared/partials/checkbox-field"
        name="system.isActive"
        checked=system.isActive
        label="Is Active"
        hint="Whether this feature is currently active"
        class="custom-class"
    }}
  
  Required: name, label
  Optional: checked, hint, class, disabled
--}}

<div class="form-group form-group--checkbox {{#if class}}{{class}}{{/if}}">
    <div class="checkbox-wrapper">
        <input 
            id="{{name}}"
            name="{{name}}" 
            type="checkbox"
            {{#if checked}}checked{{/if}}
            {{#if disabled}}disabled{{/if}}
            {{#if hint}}aria-describedby="{{name}}-hint"{{/if}}
            class="form-checkbox"
        />
        
        <label for="{{name}}" class="form-label form-label--checkbox">
            {{label}}
        </label>
    </div>
    
    {{#if hint}}
        <div id="{{name}}-hint" class="form-hint" role="note">{{hint}}</div>
    {{/if}}
</div> 