{{!-- 
  Uses Counter Component
  
  Usage:
    {{> "systems/avant/templates/shared/partials/uses-counter"
        name="system.uses"
        current=system.uses.value
        max=system.uses.max
        label="Uses"
        hint="Current uses / Maximum uses"
        class="custom-class"
    }}
  
  Required: name, label
  Optional: current, max, hint, class
--}}

<div class="form-group {{#if class}}{{class}}{{/if}}">
    <label for="{{name}}-current" class="form-label">
        {{label}}
    </label>
    
    <div class="uses-counter" {{#if hint}}aria-describedby="{{name}}-hint"{{/if}}>
        <div class="uses-counter__fields">
            <input type="number" 
                   id="{{name}}-current"
                   name="{{name}}.value" 
                   value="{{current}}" 
                   min="0"
                   placeholder="Current"
                   class="uses-counter__current"
                   aria-label="Current {{label}}"
                   data-dtype="Number" />
            
            <span class="uses-counter__separator" aria-hidden="true">/</span>
            
            <input type="number" 
                   id="{{name}}-max"
                   name="{{name}}.max" 
                   value="{{max}}" 
                   min="0"
                   placeholder="Maximum"
                   class="uses-counter__max"
                   aria-label="Maximum {{label}}"
                   data-dtype="Number" />
        </div>
    </div>
    
    {{#if hint}}
        <div id="{{name}}-hint" class="form-hint" role="note">{{hint}}</div>
    {{/if}}
</div> 