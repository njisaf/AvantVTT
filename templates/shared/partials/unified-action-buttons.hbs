{{!--
Unified Action Buttons Partial
Renders the left-side action buttons for unified actions
Icon-only styling to match talent/augment cards

Context:
- action: Unified action object with buttons array
--}}

<div class="action-buttons">
    {{#each action.buttons as |button|}}
    <div class="action-button-row">
        <button type="button" class="action-btn {{button.type}}-btn"
                data-action="rollCombinedAction"
                data-action-id="{{../action.id}}"
                data-button="{{button.type}}"
                title="{{#if (eq button.type "attack")}}Attack: {{../action.name}} (2d10+Level+Attribute+EP){{else if (eq button.type "damage")}}Damage: {{../action.name}} ({{../action.system.damageDie}}){{else if (eq button.type "armor")}}Armor: {{../action.name}} (2d10+Level+Attribute+EP){{else if (eq button.type "use")}}Use Gear: {{../action.name}} (2d10+Level+Attribute+EP){{/if}}"
                aria-label="{{#if (eq button.type "attack")}}Attack {{../action.name}}{{else if (eq button.type "damage")}}Damage {{../action.name}}{{else if (eq button.type "armor")}}Armor {{../action.name}}{{else if (eq button.type "use")}}Use {{../action.name}}{{/if}}">
            {{#if (eq button.type "attack")}}
            <i class="fas fa-dice-d20" aria-hidden="true"></i>
            {{else if (eq button.type "damage")}}
            <i class="fas fa-dice-six" aria-hidden="true"></i>
            {{else if (eq button.type "armor")}}
            <i class="fas fa-shield-alt" aria-hidden="true"></i>
            {{else if (eq button.type "use")}}
            <i class="fas fa-wrench" aria-hidden="true"></i>
            {{/if}}
        </button>
        {{#if button.total}}
        <span class="roll-summary" aria-live="polite">{{button.total}}</span>
        {{/if}}
    </div>
    {{/each}}
</div>