{{!-- 
  Textarea Field Component
  
  Usage:
    {{> "systems/avant/templates/shared/partials/textarea-field"
        name="system.description"
        value=system.description
        label="Description"
        placeholder="Enter description..."
        rows=6
        maxlength=1000
        required=true
        hint="Detailed description of the item"
        class="custom-class"
    }}
  
  Required: name, label
  Optional: value, placeholder, rows, maxlength, required, hint, class, readonly, disabled
--}}

<div class="tw-form-group {{#if class}}{{class}}{{/if}}">
    <label for="{{name}}" class="tw-form-label">
        {{label}}
        {{#if required}}<span class="required-indicator" aria-label="required">*</span>{{/if}}
    </label>
    
    <textarea
        id="{{name}}"
        name="{{name}}"
        {{#if placeholder}}placeholder="{{placeholder}}"{{/if}}
        {{#if rows}}rows="{{rows}}"{{else}}rows="4"{{/if}}
        {{#if maxlength}}maxlength="{{maxlength}}"{{/if}}
        {{#if required}}required{{/if}}
        {{#if readonly}}readonly{{/if}}
        {{#if disabled}}disabled{{/if}}
        {{#if hint}}aria-describedby="{{name}}-hint"{{/if}}
        class="tw-form-textarea"
    >{{value}}</textarea>
    
    {{#if hint}}
        <div id="{{name}}-hint" class="tw-form-hint" role="note">{{hint}}</div>
    {{/if}}
</div>